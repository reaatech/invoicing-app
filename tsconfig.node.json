{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "isolatedModules": true,
    "incremental": true,
    "composite": true,
    "outDir": "dist/electron",
    "rootDir": "electron",
    "types": ["node"]
  },
  "include": ["electron"],
  "exclude": ["electron/preload.ts"]
}

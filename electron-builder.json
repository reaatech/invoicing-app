{
  "appId": "com.rick.invoicingapp",
  "productName": "Invoicing App",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/electron/**/*",
    "dist/electron/templates/**/*",
    "electron/**/*",
    "public/**/*"
  ],
  "extraResources": [
    {
      "from": "src/templates",
      "to": "templates"
    }
  ],
  "asar": false,
  "extraMetadata": {
    "main": "dist/electron/main.js"
  },
  "mac": {
    "target": [
      "dmg"
    ],
    "icon": "public/icon.icns"
  },
  "win": {
    "target": "nsis",
    "icon": "public/icon.ico"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/icon.png"
  }
}
